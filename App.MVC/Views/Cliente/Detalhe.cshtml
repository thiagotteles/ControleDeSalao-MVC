@model App.MVC.ViewModels.ClienteViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Cliente</h4>
        </div>
        @using (Html.BeginForm("Detalhe", "Cliente", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Status)
            @Html.HiddenFor(m => m.EmpresaId)
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group form-md-line-input ">
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @required = "required" })
                            <label class="control-label">Nome<span class="required"> * </span></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-md-line-input ">
                            @Html.TextBoxFor(model => model.Celular, new { @class = "form-control", onkeyup = "mascara(this, mtel);", maxlength = "15" })
                            <label class="control-label">Celular</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-md-line-input ">
                            @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control", onkeyup = "mascara(this, mtel);", maxlength = "14" })
                            <label class="control-label">Tel. Residencial</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-md-line-input ">
                            @Html.TextBoxFor(model => model.SDataNascimento, new { @class = "form-control", @onkeyup = "mascara(this, data);", @onblur = "validaData(this,this.value)", @maxlength = "10" })
                            <label class="control-label">Aniversário</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group form-md-line-input ">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                            <label class="control-label">Email</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group form-md-line-input ">
                            @Html.TextBoxFor(model => model.Endereco, new { @class = "form-control" })
                            <label class="control-label">Endereço Completo</label>
                        </div>
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal" id="btnCancelar">Cancelar</button>
                    <button type="submit" class="btn blue">Salvar Cliente</button>
                </div>
            </div>
        }
    </div>
</div>
<script>
</script>