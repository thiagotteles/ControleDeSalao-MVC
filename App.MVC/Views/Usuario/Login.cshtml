<body class=" login">
    <script type="text/javascript">
        @Html.Raw(TempData["swal"])
    </script>

    <!-- BEGIN : LOGIN PAGE 5-2 -->
    <div class="user-login-5">
        <div class="row bs-reset">
            <div class="col-md-6 login-container bs-reset">
                <img class="login-logo login-6" src="~/assets/pages/img/login/login-invert.png" style="height: 100px" alt="Logo" />
                <div class="login-content">
                    <h1>Entre na sua conta</h1>
                    <p>Você está prestes a entrar em um ambiente seguro, tudo é armazenado de forma segura em nossos servidores na nuvem.</p>

                    @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { @class = "login-form", role = "form" }))
                    {
                        if (TempData["msg_warning"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <button class="close" data-close="alert"></button>
                                <span>@TempData["msg_warning"]</span>
                            </div>
                        }
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            <span>Insira corretamente o email e a senha. </span>
                        </div>
                        <div class="row" style="">
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Login, new { @class = "form-control form-control-solid placeholder-no-fix form-group", @type = "email", @placeholder = "Email", @required = "required" })
                            </div>
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-solid placeholder-no-fix form-group", @type = "password", @placeholder = "Senha", @required = "required" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                @*<div class="rem-password">
                                    <p>
                                        Lembrar me
                                        <input type="checkbox" class="rem-checkbox" />
                                    </p>
                                </div>*@
                            </div>
                            <div class="col-sm-8 text-right">
                                <div class="forgot-password">
                                    <a href="javascript:;" id="forget-password" class="forget-password">Esqueceu a senha?</a>
                                </div>
                                <button class="btn blue" type="submit">Entrar</button>
                            </div>
                        </div>
                    }

                    <!-- BEGIN FORGOT PASSWORD FORM -->
                    @using (Html.BeginForm("EsqueciSenha", "Usuario", FormMethod.Post, new { @class = "forget-form", role = "form" }))
                    {
                        <h3 class="font-green">Esqueceu a Senha?</h3>
                        <p> Informe o seu email para enviarmos a senha para você. </p>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Login, new { @class = "form-control form-control-solid placeholder-no-fix form-group", @type = "email", @placeholder = "Digite seu email" })
                        </div>
                        <div class="form-actions">
                            <button type="button" id="back-btn" class="btn grey btn-default">Voltar</button>
                            <button type="submit" class="btn blue btn-success uppercase pull-right">Enviar</button>
                        </div>
                    }

                    <!-- END FORGOT PASSWORD FORM -->
                </div>
                <div class="login-footer">
                    <div class="row bs-reset">
                        <div class="col-xs-5 bs-reset">
                        </div>
                        <div class="col-xs-7 bs-reset">
                            <div class="login-copyright text-right">
                                <p>Copyright &copy; Controle de Salão 2016</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 bs-reset">
                <div class="login-bg"> </div>
            </div>
        </div>
    </div>
