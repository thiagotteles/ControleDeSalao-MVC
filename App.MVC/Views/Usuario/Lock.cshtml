@model App.MVC.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "Lock";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-75840667-1', 'auto');
        ga('send', 'pageview');

    </script>
    <meta charset="utf-8" />
    <title>Controle de Salão</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <link href="~/assets/global/css/components-md.min.css" rel="stylesheet" id="style_components" type="text/css" />
    <link href="~/assets/global/css/plugins-md.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/pages/css/lock.min.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="~/favicon.ico" />
</head>
<body class="">
    <div class="page-lock">
        <div class="page-logo">
            <a class="brand" href="#">
                <img src="~/assets/layouts/layout/img/logo-light.png" alt="logo" style="height: 45px" />
            </a>
        </div>
        <div class="page-body">
            <div class="lock-head"> <i class="fa fa-lock"></i> Bloqueado </div>
            <div class="lock-body">
                <div class="pull-left lock-avatar-block">
                    <img src="@Model.UrlAvatar" class="lock-avatar" style=" height: 80px">
                </div>
                <form class="lock-form pull-left" action="/Usuario/Lock" method="post">
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.Login)
                    @Html.HiddenFor(m => m.Email)
                    @Html.HiddenFor(m => m.UrlAvatar)
                    <h4>@Model.Login</h4>
                    <div class="form-group">
                        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" />
                    </div>
                    @if (TempData["msg_warning"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button class="close" data-close="alert"></button>
                            <span>@TempData["msg_warning"]</span>
                        </div>
                    }
                    <div class="form-actions">
                        <button type="submit" class="btn red uppercase">Entrar</button>
                    </div>
                </form>
            </div>
            <div class="lock-bottom">
                <a href="/Usuario/Logout">Não é @Model.Login ? Entrar com outra conta.</a>
            </div>
        </div>
        <div class="page-footer-custom"> 2016 &copy; Controle de Salão. </div>
    </div>
    <script src="~/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
    <script src="~/assets/global/scripts/app.min.js" type="text/javascript"></script>
</body>
</html>