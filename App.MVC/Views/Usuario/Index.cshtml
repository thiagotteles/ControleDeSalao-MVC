@using App.MVC.ViewModels
@using ControleDeSalao.Domain.Entities
@model IEnumerable<UsuarioViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/datatables")
@Scripts.Render("~/bundles/datatable")
@Scripts.Render("~/bundles/mascaras")

<div class="page-content">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-group font-blue-hoki"></i>
                <span class="caption-subject font-blue-sharp bold uppercase">Usuários</span>
                <span class="caption-helper">Todos que tem acesso ao seu sistema...</span>
            </div>
            <div class="actions">
                <a class="btn btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">
                <div class="col-xs-12 col-md-12 text-left">
                    <br />
                    <a class="btn blue" data-toggle="modal" href="#modalUsuario">
                        <i class="fa fa-plus"></i>
                        Incluir um novo usuário
                    </a>
                </div>
            </div>
            <br />
            <div>
                <table class="table table-striped table-bordered table-hover table-condensed" id="tableUsuarios">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Cadastro</th>
                            <th>Ult. Login</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"><img src="@item.UrlAvatar" style="width: 30px"/></td>
                                <td>@item.Login</td>
                                <td>@item.Email</td>
                                <td>@item.DtCadastro</td>
                                <td>@item.DtUltLogin</td>
                                <td class="text-right">
                                    <a class="btn btn-xs blue tooltips editar" data-id="@item.Id" data-placement="top" data-original-title="Editar os dados do Usuario">
                                        <i class="fa fa-edit"></i> Editar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Usuario-Index")

<div class="modal fade bs-modal-lg" id="modalEdit">
</div>

<div class="modal modal fade bs-modal-lg" id="modalUsuario" tabindex="-1" role="dialog" aria-labelledby="modalUsuarioLabel" aria-hidden="true">
    @Html.Partial("Detalhe", new UsuarioViewModel { Acesso = new Funcionalidade() })
</div>